{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        {% for products in carts %}
            <div class="col">
                <div class="card" style="width: 150px;">
                    <img class="card-img-top" src="/img/{{products.product.img}}" alt="Dét" width="500">
                    <div class="card-body">
                        <h5 class="card-title">{{products.product.name}}</h5>
                        <p class="card-text">Prix : {{products.product.price}}€</p>
                        <p class="card-text">Quantité : {{products.quantite}}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
