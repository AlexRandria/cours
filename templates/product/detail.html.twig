{% extends 'base.html.twig' %}

{% block title %}Détail Product!{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col">

            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/img/{{product.img}}" alt="Dét" width="500">
                <div class="card-body">
                    <h5 class="card-title">{{product.name}}</h5>
                    <p class="card-text">{{product.price}}</p>
                </div>
                {% if is_granted('ROLE_STAFF') %}
                    <a href="{{path('admin_editProduct',{'id':product.id}) }}" class="btn btn-primary">Editer</a>
                {% endif %}
                <a href="{{path('addToCart',{'id':product.id}) }}" class="btn btn-primary">Ajouter</a>
            </div>

        </div>
    </div>
</div>
{% endblock %}